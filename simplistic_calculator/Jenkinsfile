pipeline {
    agent any

    environment {
        FLUTTER_HOME = "/home/ext_rmadan_vecv_in/flutter-sdk/flutter"
        PATH = "${FLUTTER_HOME}/bin:${PATH}"
    }

    stages {
        stage('Set Git Safe Directory') {
            steps {
                sh 'git config --global --add safe.directory /home/ext_rmadan_vecv_in/flutter-sdk/flutter'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('simplistic_calculator') {
                    sh '${FLUTTER_HOME}/bin/flutter pub get'
                }
            }
        }

        stage('Analyze Code') {
            steps {
                dir('simplistic_calculator') {
                    sh '${FLUTTER_HOME}/bin/flutter analyze'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('simplistic_calculator') {
                    sh '${FLUTTER_HOME}/bin/flutter test'
                }
            }
        }

        stage('Build APK') {
            steps {
                dir('simplistic_calculator') {
                    sh '${FLUTTER_HOME}/bin/flutter build apk --debug'
                }
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: 'simplistic_calculator/build/app/outputs/flutter-apk/app-debug.apk', fingerprint: true
            }
        }
    }

    post {
        always {
            echo 'Finished Flutter CI pipeline'
        }
    }
}
